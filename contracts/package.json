{
  "name": "contracts",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "deploy": "hardhat deploy-zksync --script deploy.ts",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test --network localNode",
    "mint": "hardhat run scripts/mint.ts --network localNode",
    "lint": "solhint 'contracts/**/*.sol'",
    "fmt:sol": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "fmt:ts": "prettier --write '**/*.ts'",
    "fmt": "yarn fmt:sol && yarn fmt:ts"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-chai-matchers": "^1.2.1",
    "@matterlabs/hardhat-zksync-deploy": "^1.1.2",
    "@matterlabs/hardhat-zksync-node": "^1.0.1",
    "@matterlabs/hardhat-zksync-solc": "^1.0.6",
    "@matterlabs/hardhat-zksync-verify": "^1.2.2",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.0.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.4",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^3.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "zksync-ethers": "^6.0.0"
  }
}
