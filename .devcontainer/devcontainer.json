{
  "name": "Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    }
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "50gb"
  },
  "remoteUser": "vscode",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/cargo/bin:/home/vscode/.yarn/bin"
  },
  "onCreateCommand": "./.devcontainer/install-tools.sh",
  "updateContentCommand": "cd contracts && yarn && yarn compile",
  "postCreateCommand": "./.devcontainer/testnet.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "solidity.packageDefaultDependenciesDirectory": "contracts/node_modules",
        "solidity.defaultCompiler": "remote"
      },
      "extensions": [
        "JuanBlanco.solidity"
      ]
    }
  }
}